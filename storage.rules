rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Trainer avatars — public read, only owner can upload
    match /trainer_avatars/{userId}.jpg {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Client avatars — same
    match /client_avatars/{userId}.jpg {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Program cover images
    match /program_covers/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Exercise images / thumbnails
    match /exercise_images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Client progress photos — private
    match /client_progress/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}